{
  "properties": {
    "name": {
      "pattern": "^[a-zA-Z\\.\\-\\d]+$",
      "message": "Name must be only letters, numbers, dots, or dashes",
      "default": "jquery.sample",
      "required": true
    },
    "author": {
      "required": true
    }
  },
  "tpl": {
    "tpl/jquery.plugin/src/base.js": "{{name}}/src/{{name}}.js",
    "tpl/jquery.plugin/test/base.test": "{{name}}/test/{{name}}"
  }
}
