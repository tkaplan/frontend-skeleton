{
  "properties": {
    "name": {
      "pattern": "^[a-zA-Z\\.\\-\\d]+$",
      "message": "Name must be only letters, numbers, dots, or dashes",
      "default": "node.sample",
      "required": true
    },
    "description": {
    },
    "author": {
      "required": true
    },
    "email": {
      "required": true
    },
    "url": {
      "required": true
    }
  },
  "tpl": {
    "tpl/node/bin/base.bin": "{{name}}/bin/{{name}}",
    "tpl/node/package.json": "{{name}}/package.json",
    "tpl/node/README.md": "{{name}}/README.md",
    "tpl/node/examples": "{{name}}/examples",
    "tpl/node/lib/base.js": "{{name}}/lib/{{name}}.js"
  }
}
